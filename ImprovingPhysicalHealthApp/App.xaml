<?xml version="1.0" encoding="UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ImprovingPhysicalHealthApp.App">

    <Application.Resources>

        <!-- green page background -->
        <Style x:Key="GreenPageStyle" TargetType="ContentPage">
            <Setter Property="BackgroundColor" Value="#2E8B57" />
        </Style>

        <!-- Used for text inputs -->
        <Style x:Key="InputEntryStyle" TargetType="Entry">
            <Setter Property="BackgroundColor" Value="#f0f0f0" />
            <Setter Property="HeightRequest" Value="50" />
            <Setter Property="Margin" Value="0,5" />
            <Setter Property="FontSize" Value="16" />
        </Style>

        <!--  title  -->
        <Style x:Key="PageTitleStyle" TargetType="Label">
            <Setter Property="FontFamily" Value="Arial" />
            <Setter Property="FontSize" Value="28" />
            <Setter Property="FontAttributes" Value="Bold" />
            <Setter Property="TextColor" Value="White" />
            <Setter Property="HorizontalOptions" Value="Center" />
        </Style>

        <!-- Button card -->
        <Style x:Key="CardButtonStyle" TargetType="Button">
            <Setter Property="BackgroundColor" Value="#DAA520" />
            <Setter Property="TextColor" Value="White" />
            <Setter Property="CornerRadius" Value="15" />
            <Setter Property="HeightRequest" Value="70" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="Margin" Value="0,10" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="HorizontalOptions" Value="FillAndExpand" />
        </Style>

        <!-- error label -->
        <Style x:Key="ErrorMessageStyle" TargetType="Label">
            <Setter Property="BackgroundColor" Value="#FFCCCC" />
            <Setter Property="TextColor" Value="#990000" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Margin" Value="0,10,0,0" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="HorizontalOptions" Value="Fill" />
            <Setter Property="VerticalOptions" Value="Center" />
        </Style>

        <!-- info labels -->
        <Style x:Key="InfoTextStyle" TargetType="Label">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="TextColor" Value="White" />
            <Setter Property="HorizontalOptions" Value="Center" />
            <Setter Property="Margin" Value="0,10,0,0" />
            <Setter Property="LineBreakMode" Value="WordWrap" />
        </Style>

        <!-- day of the week -->
        <Style x:Key="DayTitleStyle" TargetType="Label">
            <Setter Property="FontSize" Value="22" />
            <Setter Property="FontAttributes" Value="Bold" />
            <Setter Property="TextColor" Value="White" />
            <Setter Property="HorizontalOptions" Value="Center" />
            <Setter Property="Margin" Value="0,10,0,10" />
        </Style>

    </Application.Resources>
</Application>
