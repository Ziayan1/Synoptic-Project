<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ImprovingPhysicalHealthApp.HomePage"
             Title="Home"
             Style="{StaticResource GreenPageStyle}">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20">

            <Label Text="Welcome Back!"
                   Style="{StaticResource PageTitleStyle}" />

            <Button Text="BMI Calculator"
                    Style="{StaticResource CardButtonStyle}"
                    Clicked="OnBmiClicked" />

            <Button Text="Calorie Calculator"
                    Style="{StaticResource CardButtonStyle}"
                    Clicked="OnCalorieClicked" />

            <Button Text="Workout Scheduler"
                    Style="{StaticResource CardButtonStyle}"
                    Clicked="OnWorkoutSchedulerClicked" />
            
            

            <Button Text="Diet Plans"
                    Style="{StaticResource CardButtonStyle}"
                    Clicked="OnDietClicked" />

            <Button Text="Logout"
                    BackgroundColor="#B22222"
                    TextColor="White"
                    FontSize="20"
                    CornerRadius="15"
                    HeightRequest="80"
                    Clicked="OnLogoutClicked" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
