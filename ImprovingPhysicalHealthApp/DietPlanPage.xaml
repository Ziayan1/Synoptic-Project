<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ImprovingPhysicalHealthApp.DietPlanPage"
             Title="Diet Plan"
             Style="{StaticResource GreenPageStyle}">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20">

            <!-- Automatically calculated goal -->
            <Label x:Name="goalLabel"
                   Text="Your Goal: "
                   FontAttributes="Bold"
                   FontSize="24"
                   TextColor="White"
                   HorizontalOptions="Center" />

            <!-- Dietary requirement picker -->
            <Label Text="Special Dietary Requirement:"
                   FontAttributes="Bold"
                   TextColor="White" />
            <Picker x:Name="dietPicker"
                    Title="Select dietary requirement"
                    Style="{StaticResource InputEntryStyle}" />

            <!-- Main course picker -->
            <Label Text="Select Main Course:"
                   FontAttributes="Bold"
                   TextColor="White" />
            <Picker x:Name="mainCoursePicker"
                    Title="Choose main course"
                    Style="{StaticResource InputEntryStyle}" />

            <!-- Side picker -->
            <Label Text="Select Side:"
                   FontAttributes="Bold"
                   TextColor="White" />
            <Picker x:Name="sidePicker"
                    Title="Choose side"
                    Style="{StaticResource InputEntryStyle}" />

            <!-- Drink picker -->
            <Label Text="Select Drink:"
                   FontAttributes="Bold"
                   TextColor="White" />
            <Picker x:Name="drinkPicker"
                    Title="Choose drink"
                    Style="{StaticResource InputEntryStyle}" />

            <!-- Add to Calorie Intake -->
            <Button Text="Add to Calorie Intake"
                    Clicked="OnAddToCaloriesClicked"
                    Style="{StaticResource CardButtonStyle}" />

            <!-- Total Calories Label -->
            <Label x:Name="calorieTotalLabel"
                   FontSize="18"
                   TextColor="White"
                   IsVisible="False" />

            <!-- Meal Plan Summary -->
            <Label x:Name="suggestionsLabel"
                   FontSize="16"
                   TextColor="White"
                   LineBreakMode="WordWrap"
                   IsVisible="False" />

            <!-- Meal History -->
            <Label x:Name="mealHistoryLabel"
                   FontSize="14"
                   TextColor="White"
                   LineBreakMode="WordWrap"
                   IsVisible="False" />

            <!-- Back to Home -->
            <Button Text="Back to Home"
                    Style="{StaticResource CardButtonStyle}"
                    Clicked="OnBackToHomeClicked" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
