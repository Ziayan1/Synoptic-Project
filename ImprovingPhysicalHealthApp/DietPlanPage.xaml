<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ImprovingPhysicalHealthApp.DietPlanPage"
             Title="Diet Plan"
             Style="{StaticResource GreenPageStyle}">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20">

            <Label Text="Create Your Meal Plan"
                   Style="{StaticResource PageTitleStyle}" />

            <Label Text="Select Goal:" TextColor="White" />
            <Picker x:Name="goalPicker"
                    Title="Choose Goal"
                    Style="{StaticResource InputEntryStyle}" />

            <Label Text="Special Dietary Requirement:" TextColor="White" />
            <Picker x:Name="dietPicker"
                    Title="Choose Diet"
                    Style="{StaticResource InputEntryStyle}" />

            <Label Text="Main Course:" TextColor="White" />
            <Picker x:Name="mainCoursePicker"
                    Title="Main Course"
                    Style="{StaticResource InputEntryStyle}" />

            <Label Text="Side Dish:" TextColor="White" />
            <Picker x:Name="sidePicker"
                    Title="Side Dish"
                    Style="{StaticResource InputEntryStyle}" />

            <Label Text="Drink:" TextColor="White" />
            <Picker x:Name="drinkPicker"
                    Title="Drink"
                    Style="{StaticResource InputEntryStyle}" />

            <Label x:Name="suggestionsLabel"
                   TextColor="White"
                   FontSize="16"
                   IsVisible="False" />

            <Label x:Name="calorieTotalLabel"
                   TextColor="White"
                   FontSize="20"
                   FontAttributes="Bold"
                   IsVisible="False" />

            <Button Text="Add to Calorie Intake"
                    Style="{StaticResource CardButtonStyle}"
                    Clicked="OnAddToCaloriesClicked" />

            <Button Text="Back to Home"
                    Style="{StaticResource CardButtonStyle}"
                    Clicked="OnBackToHomeClicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
