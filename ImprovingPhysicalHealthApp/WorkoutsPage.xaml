<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ImprovingPhysicalHealthApp.WorkoutsPage"
             Title="Workouts"
             Style="{StaticResource GreenPageStyle}">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20">

            <!-- Title -->
            <Label Text="Workout Recommendations"
                   Style="{StaticResource PageTitleStyle}" />

            <!-- Smart suggestion display -->
            <Label x:Name="suggestionLabel"
                   TextColor="White"
                   FontAttributes="Bold"
                   FontSize="16" />

            <!-- Filter buttons -->
            <HorizontalStackLayout Spacing="10">
                <Button Text="All"
                        Style="{StaticResource CardButtonStyle}"
                        BackgroundColor="#4682B4"
                        Clicked="OnFilterClicked" />

                <Button Text="Home"
                        Style="{StaticResource CardButtonStyle}"
                        BackgroundColor="#4682B4"
                        Clicked="OnFilterClicked" />

                <Button Text="Gym"
                        Style="{StaticResource CardButtonStyle}"
                        BackgroundColor="#4682B4"
                        Clicked="OnFilterClicked" />

                <Button Text="Low Impact"
                        Style="{StaticResource CardButtonStyle}"
                        BackgroundColor="#4682B4"
                        Clicked="OnFilterClicked" />
            </HorizontalStackLayout>

            <!-- Workout Cards -->
            <VerticalStackLayout x:Name="workoutList"
                                 Spacing="15">
                <!-- Cards will be added in code-behind -->
            </VerticalStackLayout>

            <!-- Back Button -->
            <Button Text="Back to Home"
                    Style="{StaticResource CardButtonStyle}"
                    Clicked="OnBackClicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
